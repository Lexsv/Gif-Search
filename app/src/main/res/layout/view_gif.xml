<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/whit">




    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/view_gif_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_cloud_download"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_gif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:maxLines="3"
        app:layout_constraintTop_toBottomOf="@+id/view_gif_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Title" />

    <ImageButton
        android:id="@+id/view_gif_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:contentDescription="@string/button_close"
        android:src="@drawable/ic_close"
        android:background="@drawable/bg_butt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_gif_title"
        app:layout_constraintEnd_toStartOf="@id/view_gif_save"
        />
    <ImageButton
        android:id="@+id/view_gif_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save"
        android:contentDescription="@string/button_save"
        android:layout_margin="5dp"
        android:background="@drawable/bg_butt"
        app:layout_constraintStart_toEndOf="@id/view_gif_close"
        app:layout_constraintTop_toBottomOf="@id/view_gif_title"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>